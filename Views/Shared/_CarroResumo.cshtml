@model Carro
<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImageCar" class="img-fluid" /></p>
    <h4>
    <a asp-controller="Carro" asp-action="Details" 
    asp-route-carroId="@Model.CarroId">@Model.Marca</a>
    </h4>
    <p>Cor : @Model.Cor</p>
    <p>Preço : @Model.Preco.ToString("c")</p>
    <p>Descrição : @Model.Descricao</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
            asp-action="AdicionarItemNoCarrinhoCompra" asp-route-CarroId="@Model.CarroId">
             Incluir no Carrinho
            </a>
        </p>
    </div>
</div>
