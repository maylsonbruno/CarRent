<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#"
    role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Carros
    </a>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        @foreach(var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Carro" asp-action="List" style="color:black"
                   asp-route-categoria="@categoria.Modelo"> @categoria.Modelo</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Carro" asp-action="List" asp-route-categoria="" 
            style="color:black">Todos os Carros</a>
        </li>
    </ul>
</div>