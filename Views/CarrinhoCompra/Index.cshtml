@model CarrinhoCompraViewModel

<div class="Container">
    <div class="row checkoutForm">
        <div>
        <img src="~/images/Full-Cart-icon.png" width="30px" height="30px" />
        </div>
        <div>
            <h4> Seu carrinho de compras : </h4>
        </div>

        <table class="table table-striped-columns">

            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Carro</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left">@item.Carro.Marca</td>
                        <td class="text-right">@item.Carro.Preco.ToString("c")</td>

                        <td class="text-right">
                            @((item.Quantidade * item.Carro.Preco).ToString("c"))
                        </td>

                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                               asp-route-carroId="@item.Carro.CarroId">
                                <img src="~/images/delete.png" width="30px" height="30px" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.CarrinhoCompraTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>

        </table>


        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Finalizar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Carro" asp-action="List">Continuar Comprando</a>
            </div>
        </div>
        <br />
    </div>
</div>
